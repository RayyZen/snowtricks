{% block title %}SnowTricks - New Trick{% endblock %}
{% extends "base.html.twig" %}
{% block body %}

	<div class="container">
		<div class="content py-5">

			{{ form_start(editForm) }}
				<div class="col-12">
					{{ form_row(editForm.name) }}
				</div>
				<div class="col-12">
					{{ form_row(editForm.content) }}
				</div>
				<div class="col-12 col-md-4 col-lg-3">
					{{ form_row(editForm.trickGroup) }}
				</div>
				<div class="col-12">
					<span>Image(s)</span>
					<div class="pre-medias d-flex flex-wrap col-12">
						{% for image in images %}
							<div class="card" data-card-id="img-{{ image.id }}">
  								<img src="{{ asset('img/tricks/') ~ image.filename }}" alt="{{ trick.name }}" class="card-img-top">
 								<div class="card-body">
 									<button type='button' class='btn btn-del-image bg-danger text-light col-12' data-token="{{ csrf_token('delete' ~ image.id) }}" data-id="{{ image.id }}" data-path="{{ path('trick.image.delete', {id: image.id}) }}"><i class='fad fa-trash fa-lg'></i> Delete</button>
  								</div>
							</div>
						{% endfor %}
					</div>
					<div class="col-12 col-md-4">
						{{ form_row(editForm.tricksImages.thumbnail) }}
						<div class="preview-thumbnail"></div>
					</div>
					<div class="col-12 col-md-8">
						{{ form_row(editForm.tricksImages.additional) }}
						<div class="preview-additional"></div>
					</div>
				</div>
				<div class="col-12">
					<span>Video(s)</span>
					<div class="pre-medias d-flex flex-wrap col-12">
						{% for video in videos %}
							<div class="card" data-card-id="vid-{{ video.id }}">
								<iframe src="{{ video.url }}" frameborder="0" class="card-img-top"></iframe>
	 							<div class="card-body">
	 								<button type='button' class='btn btn-del-video bg-danger text-light col-12' data-token="{{ csrf_token('delete' ~ video.id) }}" data-id="{{ video.id }}" data-path="{{ path('trick.video.delete', {id: video.id}) }}"><i class='fad fa-trash fa-lg'></i> Delete</button>
	  							</div>
							</div>
						{% endfor %}
					</div>
					<p class="text-muted">Please use the platform embed button if exist (See the exemple below)</p>
					<table class="col-12">
						<tbody class="videos-field">
							<tr>
								<td style="width: 40px"><button type="button" class="btn btn-add-video text-info"><i class="fas fa-plus fa-lg"></i></button></td>
								<td><input type="text" name="add-video[]" class="form-control form-control" placeholder="<iframe>...</iframe>" /></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="col-12 col-md-4 col-lg-2 my-3">
					<input type="submit" class="btn btn-light w-100" value="Save">
				</div>
			{{ form_end(editForm) }}
		</div>
	</div>

{% endblock %}